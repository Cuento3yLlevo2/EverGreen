<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mahi.evergreen">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EverGreen">
        <activity android:name="com.mahi.evergreen.view.ui.activities.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.mahi.evergreen.view.ui.activities.LoginActivity" />
        <activity android:name="com.mahi.evergreen.view.ui.activities.RegisterActivity" />
        <activity
            android:name="com.mahi.evergreen.view.ui.activities.MainActivity2"
            android:label="@string/title_activity_main2"
            android:theme="@style/Theme.EverGreen.NoActionBar">

        </activity>
        <activity android:name="com.mahi.evergreen.view.ui.activities.SplashscreenActivity" />
        <activity android:name="com.mahi.evergreen.view.ui.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
    </application>

</manifest>