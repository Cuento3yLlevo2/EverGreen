<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/ripple"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:baselineAligned="false"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivCategoryImage"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:src="@mipmap/ic_launcher"
                android:layout_margin="4dp"
                android:scaleType="centerCrop"
                android:paddingTop="8dp"
                android:layout_gravity="center"
                android:contentDescription="@string/cd_post_cover_image" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/tvCategoryName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Vidrio"
                android:textSize="@dimen/textSizeTitle"
                android:textColor="@color/primary_text"
                android:ellipsize="end"
                android:lines="1"
                android:textStyle="bold"/>
            <TextView
                android:layout_margin="4dp"
                android:id="@+id/tvCategoryDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Todos conocemos el sonido de un montón de vidrios rompiéndose al ser depositados en el camión de reciclaje. ¿Por qué no buscar nuevos usos para botellas de vidrio, frascos e incluso ventanas antes de ponerlos inmediatamente en el contenedor de reciclaje?"
                android:textSize="@dimen/textSizeSubtitle"
                android:textColor="@color/secondary_text"
                android:ellipsize="end"
                android:lines="7"
                />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/chat_background_light_green"/>
</LinearLayout>