<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="295dp" android:layout_height="wrap_content"
    android:padding="9dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civLeftProfileImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/user_default"/>

    <TextView
        android:id="@+id/tvLeftTextMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/civLeftProfileImage"
        android:layout_marginStart="6dp"
        android:text="there is some text"
        android:textSize="18sp"
        android:padding="8dp"
        android:background="@drawable/background_left"
        android:textColor="@color/primary_text"/>

    <ImageView
        android:id="@+id/ivLeftImageMessage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toEndOf="@id/civLeftProfileImage"
        android:layout_marginStart="6dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvLeftIsTextSeen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="seen"
        android:layout_below="@id/tvLeftTextMessage"/>

</RelativeLayout>